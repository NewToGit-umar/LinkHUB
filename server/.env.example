# LinkHub Server Environment Variables
# Copy this file to .env and fill in the values

# Server Configuration
NODE_ENV=development
PORT=5001

# Database
# Local MongoDB: mongodb://localhost:27017/linkhub
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/linkhub
MONGODB_URI=mongodb://localhost:27017/linkhub

# JWT Authentication
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Client URL (for CORS)
# Development: http://localhost:5173
# Production: https://your-frontend-domain.com
CLIENT_URL=http://localhost:5173

# Logging Level
# Options: error, warn, info, http, debug
LOG_LEVEL=debug